# Calculator

namespace Calculadora.Models
{
    class Inicio
    {
        static void Main(string[] args)
        {
            Menu ();
        }
        static void Menu()
        {
            Console.Clear();
            Console.WriteLine($"-----Calculadora-----");
            Console.WriteLine($"Escolha uma operação:");
            Console.WriteLine($"1 - Adição (+)");
            Console.WriteLine($"2 - Subtração (-)");
            Console.WriteLine($"3 - Multiplicação (*)");
            Console.WriteLine($"4 - Divisão (/)");
            Console.WriteLine($"0 - Cancelar operação");

            double operacaoEscolhida =  Convert.ToDouble(Console.ReadLine()); 

            switch (operacaoEscolhida)
            {
                case 0: Console.Clear(); System.Environment.Exit(0); break;
                case 1: adicao(); break;
            }
        }

        static void adicao()
        {
            Console.Clear();
            Console.WriteLine($"Operação Escolhida: Adição");
            Console.WriteLine($"Digite o primeiro valor:");
            double valor1 = Convert.ToDouble(Console.ReadLine());

            Console.Clear();
            Console.WriteLine($"Digite o segundo valor:");
            double valor2 = Convert.ToDouble(Console.ReadLine());

            Console.Clear();
            double resultadoSoma = valor1 + valor2;
            Console.WriteLine($"O resultado da soma é {resultadoSoma}.");
            Console.WriteLine($"Voltando...");

            Thread.Sleep(3000);
            Menu();
        }
    }
}
